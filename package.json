{
	"name": "newsman",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "concurrently --kill-others-on-fail -n 'vite,inngest' -c 'blue,yellow' 'vite dev' 'pnpm inngest'",
		"inngest": "inngest-cli dev --no-discovery -u http://localhost:5173/api/inngest",
		"build": "vite build",
		"preview": "node server.js",
		"test": "pnpm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"deploy": "fly deploy && curl -X PUT https://newsman.fly.dev/api/inngest"
	},
	"devDependencies": {
		"@playwright/browser-chromium": "^1.40.1",
		"@playwright/test": "^1.40.1",
		"@sveltejs/adapter-node": "^2.0.2",
		"@sveltejs/kit": "^2.0.6",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@types/node": "^20.10.6",
		"@types/polka": "^0.5.7",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0",
		"concurrently": "^8.2.2",
		"dotenv": "^16.3.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"inngest-cli": "^0.23.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"vitest": "^1.1.1"
	},
	"type": "module",
	"dependencies": {
		"@img/sharp-linux-x64": "^0.33.1",
		"inngest": "^3.7.4",
		"jimp": "^0.22.10",
		"marked": "^11.1.1",
		"openai": "^4.24.1",
		"playwright": "^1.40.1",
		"polka": "^0.5.2",
		"resend": "^2.1.0",
		"tsx": "^4.7.0"
	}
}